<!DOCTYPE html>
<html lang="en">

<% if(status){%> 
    <%- include standardnavigatorlogin.ejs %>
<%}else{%>
    <%- include standardnavigator.ejs %>
<%}%>

<body style="background-color:#EAEAEA;">
<div id="container1">
  <div class="jumbotron" id="body1">
    <div class="panel-heading">
            <h4 class="panel-title contanier">
              <a data-toggle="collapse" href="#collapse1">Mortgage Loans</a>   <!--NAMING-->
            </h4>
          </div>

          <!--COLLAPSE START-->
          <div id="collapse1" class="panel-collapse collapse">
            <!--<div class="panel-body">Panel Body</div>-->
            <table class="table table-hover">
              <thread>
                <tr>
                  <th>Debt Owner</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Balance</th>
                    <th>Expected End Date</th>
                </tr>
              </thread>
              <tbody>
                <% for(var i=0; i<loan1.length; i++) {%>
                  <form action="/posttrade" method="POST">
                  <tr>
                      <td><%= loan1[i].userID %></td>
                      <td><%= loan1[i].name %></td>
                      <td><%= loan1[i].total %></td>
                      <td><%= loan1[i].currentBalance %></td>
                      <td><%= loan1[i].expectedEndDate %></td> 
                      <td><button type="submit" class="btn btn-success btn-md"> Confirm </button></td>                
                  </tr>
                </form>
                <% } %>
              
              </tbody>
            </table>
          </div>
  </div>
<%- include footerNavigator.ejs %>
</div>
</body>
</html>