<!DOCTYPE html>
<html lang="en">

<% if(status){%> 
    <%- include standardnavigatorlogin.ejs %>
<%}else{%>
    <%- include standardnavigator.ejs %>
<%}%>

<body style="background-color:#EAEAEA;">
<div id="container1">
	<div class="container" id="body1">
	<h1>Sign In</h1>
	<form action="/login" method="POST" class="form-horizontal" role="form" style="width: 100%;">
	<div class="form-group">
		<label for="email" class="col-sm-2 control-label">Email:</label>
		<div class="col-sm-6">
		    <input type="email" class="form-control" id="email" name="email" placeholder="example@domain.com">
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="col-sm-2 control-label">Password:</label>
		<div class="col-sm-6">
		    <input type="password" class="form-control" id="password" name="password">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
			<button type="submit" id="login" name="login" class="btn btn-primary">Sign In</button>
		</div>
	</div>
	</form>
<!--facebook button -->
	<div class="jumbotron text-center">

        <p>Login or Register with:</p>

        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
<!-- -->
    </div>
</div>
<%- include footernavigator.ejs %>
</div>
</body>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '1071255159582585',
      xfbml      : true,
      version    : 'v2.5'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
</html>