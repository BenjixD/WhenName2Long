<!DOCTYPE HTML>
<html lang="en">

<% if(status){%> 
    <%- include standardnavigatorlogin.ejs %>
<%}else{%>
    <%- include standardnavigator.ejs %>
<%}%>

<body style="background-color:#EAEAEA;">
<div id="container1">
	<div id="body1">
		<h1>Loan Request Form</h1>
		<form class="form-horizontal" role="form" style="width: 50%;" action = "/makeloan" method = "POST">
    	<div class="form-group">
		    <label for="name" class="col-sm-2 control-label">Enter Name of the Loan:</label>
		    <div class="col-sm-10">
		            <input type="text" class="form-control" id="name" name="name" required>
		    </div>
    	</div>
    	<div class="form-group">
		    <label for="interestType" class="col-sm-2 control-label">Interest Type</label>
		    <div class="col-sm-10">
				<select name="interestType">
		        	<% for(var i=0; i<it.length; i++) {%>
		        		<option value=<%= it[i] %> > <%= it[i] %> </option>
		        	<%}%>
		        </select>
        	</div>
    	</div>
    	<div class="form-group">
		    <label for="interestRate" class="col-sm-2 control-label">Enter the Interest Rate:</label>
		    <div class="col-sm-10">
		            <input type="text" class="form-control" id="interestRate" name="interestRate">
		    </div>
    	</div>
    	<div class="form-group">
		    <label for="annuityType" class="col-sm-2 control-label">Annuity Type</label>
		    <div class="col-sm-10">
		       <select name="annuityType">
		        	<% for(var i=0; i<at.length; i++) {%>
		        		<option value=<%= at[i] %> > <%= at[i] %> </option>
		        	<%}%>
		        </select>
        	</div>
    	</div>
    	<div class="form-group">
		    <label for="fixedInterest" class="col-sm-2 control-label">Fixed Interest?</label>
		    <div class="col-sm-10">
		        <select name="fixedInterest">
		        	<% for(var i=0; i<fi.length; i++) {%>
		        		<option value=<%= fi[i] %> > <%= fi[i] %> </option>
		        	<%}%>
		        </select>
        	</div>
    	</div>
    	<div class="form-group">
		    <label for="fees" class="col-sm-2 control-label">Service Fees:</label>
		    <div class="col-sm-10">
		            <input type="number" class="form-control" id="fees" name="fees" required>
		    </div>
    	</div>
    	<div class="form-group">
		    <label for="total" class="col-sm-2 control-label">Total Loan:</label>
		    <div class="col-sm-10">
		            <input type="number" class="form-control" id="total" name="total" required>
		    </div>
    	</div>
    	<div class="form-group">
		    <label for="frequency" class="col-sm-2 control-label">Frequency</label>
		    <div class="col-sm-10">
		    	<select name="frequency">
		        	<% for(var i=0; i<fe.length; i++) {%>
		        		<option value=<%= fe[i] %> > <%= fe[i] %> </option>
		        	<%}%>
		        </select>
		     </div>
    	</div>
    	<div class="form-group">
		    <label for="total" class="col-sm-2 control-label">Installment:</label>
		    <div class="col-sm-10">
		            <input type="number" class="form-control" id="installmentSum" name="installmentSum" required>
		    </div>
    	</div>
    	<div class="form-group">
		    <label for="notes" class="col-sm-2 control-label">Notes:</label>
		    <div class="col-sm-10">
		        <input type="text" class="form-control" id="notes" name="notes" required>
		    </div>
    	</div>
    	<div class="form-group">
		    <label for="purpose" class="col-sm-2 control-label">Purpose:</label>
		    <div class="col-sm-10">
		        <input type="text" class="form-control" id="purpose" name="purpose" required>
		    </div>
    	</div>
		<div class="form-group">
		    <div class="col-sm-10 col-sm-offset-2">
		        <button type="submit" id="submit" name="submit" class="btn btn-primary">Submit</button>
		    </div>
		</div>
		<div class="form-group">
		    <label for="product" class="col-sm-2 control-label">Loan Type</label>
		    <div class="col-sm-10">
		    	<select name="product">
		        	<% for(var i=0; i<lt.length; i++) {%>
		        		<option value=<%= lt[i] %> > <%= lt[i] %> </option>
		        	<%}%>
		        </select>
		     </div>
    	</div>
	</div>
<%- include footernavigator.ejs %>
</div>
</body>
</html>